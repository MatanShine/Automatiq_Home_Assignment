FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY frontend/package.json frontend/package-lock.json* ./

# Install dependencies
RUN npm ci

# Copy source code
COPY frontend/ .

# Expose port
EXPOSE 3000

# Run vite dev server with hot reload
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]


